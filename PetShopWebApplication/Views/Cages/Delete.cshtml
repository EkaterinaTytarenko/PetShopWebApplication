@model PetShopWebApplication.Models.Cage

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви дісно хочете видалити цю клітку з магазину "@Html.DisplayFor(Model => Model.Shop.Name)"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Square)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Square)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.ShopID">Повернутися до списку кліток</a>
    </form>
</div>
