@model PetShopWebApplication.Models.Species

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання</h1>

<h4>Новий вид</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeTime" class="control-label"></label>
                <input asp-for="LifeTime" class="form-control" />
                <span asp-validation-for="LifeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label"></label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
            <table>
                Оберіть їжу для своєї тварини
                <tr>
                    @{

                        List<PetShopWebApplication.Models.AssignedFoodData> food = ViewBag.Food;

                        foreach (var f in food)
                        {

                        @:</tr><tr>
                            @:<td>
                                <input type="checkbox"
                                       name="selectedFood"
                                       value="@f.FoodID"
                                       @(Html.Raw(f.Assigned ? "checked=\"checked\"" : "")) />
                                @:  @f.Name
                            @:</td>
                        }
                    @:</tr>
                    }
                </table>
                <div class="form-group">
                    <input type="submit" value="Додати" class="btn btn-primary" />
                </div>

            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до таблиці видів</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
