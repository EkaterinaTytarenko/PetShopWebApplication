@model PetShopWebApplication.Models.Species

@{
    ViewData["Title"] = "Details";
}

<h1>Детальна інформація</h1>

<div>
    <h4>Вид тварин</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LifeTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LifeTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Temperature)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Temperature)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Список їжі</th>
                </tr>
                @foreach (var item in Model.SpeciesFood)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Food.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Редагувати</a> |
    <a asp-action="Delete" asp-route-id="@Model.ID">Видалити</a> |
    <a asp-action="Index">Повернутися до таблиці видів</a>
</div>
