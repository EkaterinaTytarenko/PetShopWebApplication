@model PetShopWebApplication.Models.Animal

@{
    ViewData["Title"] = "Choosecage";
}

<h1>Оберіть для своєї тварини клітку у обраному магазині </h1>

<h4>Список доступних кліток</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Choosecage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cage" class="control-label"></label>
                <select asp-for="CageID" class="form-control" asp-items="ViewBag.CageID">
                    <option value="">-- Оберіть номер клітки --</option>
                </select>
                <span asp-validation-for="CageID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Збереги" class="btn btn-primary" />
                <input type="button" value="Назад" class="btn btn-primary" onclick="history.back()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку тварин</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
