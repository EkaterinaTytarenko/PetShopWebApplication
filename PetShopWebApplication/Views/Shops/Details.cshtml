
@model PetShopWebApplication.Models.Shop

@{
    ViewData["Title"] = "Details";
}

<h1>Детальна інформація</h1>

<div>
    <h4>Магазин</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cages)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Номер клітки</th>
                    <th>Площа</th>
                </tr>
                @foreach (var item in Model.Cages)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Square)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Редагувати інформацію про магазин</a> |
    <a asp-controller="Cages" asp-action="Details" asp-route-id="@Model.ID">Редагувати інформацію про клітки</a> |
    <a asp-action="Delete" asp-route-id="@Model.ID">Видалити</a> |
    <a asp-action="Index">Повернутися до таблиці магазинів</a>
</div>
